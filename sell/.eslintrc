{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "extends": "standard",
  "plugins": ["html"],
  "rules": {
    "generator-star-spacing": "off",
    "no-debugger": "'process.env.NODE_ENV' === 'production' ? 'error' : 'off'",
    "semi": ["error", "always"],
    "indent": 0,
    "space-before-function-paren": 0,
    "arrow-parens": ["error", "always"]
  }
}
